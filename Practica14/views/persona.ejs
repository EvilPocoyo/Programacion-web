<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Persona</title>
</head>
<body>
    <!-- Aquí se muestra el valor de la variable ID -->
    <h1>Nombre de la persona: <%= ID %></h1>

    <%
    // Declaracion de posibles resultados
    const opciones = {
        'bienvenido': 'Bienvenido',
        'hola': 'Hola',
        'adios': 'Adiós'
      } 

    // 
    Message = Message.toLowerCase();
    switch (Message) { 
        case 'hola' : %>
        <h2>Mensaje: <%= opciones[Message] %></h2>
        <% break; 
        case 'bienvenido' : %>
        <h2>Mensaje: <%= opciones[Message] %></h2>
        <% break; 
        case 'adios' : %>
        <h2>Mensaje: <%= opciones[Message] %></h2>
        <% break; 
        default:%>
        <h2>Mensaje inválido</h2>
        <% break; 
    } %>
    
    <%
    // Estamos validando que sea un numero entero
    if(Number(times) % 1 == 0){
    %>
    <% //Ciclo para mostrar los mensajes
    for(var i = 1; i <= Number(times); i++) {%>
        <h4><%= `${opciones[Message]} ${ID}`%> </h4>
    <% } %>
  <%}else{%>
    <h4>El query <b>times</b> debe ser un número entero</h4>
  <%}%>
</body>
</html>